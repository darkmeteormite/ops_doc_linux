# Configuration Wizard (http://tools.percona.com/) version REL5-20120208
# Configuration name huoban-api generated for joshua@huoban.com at 2015-10-11 09:02:13

[mysql]

# CLIENT #
port                           = 3306
socket                         = /data/mysql/mysql.sock

[mysqld]

# GENERAL #
user                           = mysql
default-storage-engine         = InnoDB

# MyISAM #
key-buffer-size                = 32M
myisam-recover                 = FORCE,BACKUP

# SAFETY #
max-allowed-packet             = 16M
max-connect-errors             = 1000000
skip-name-resolve
# sql-mode                       = STRICT-TRANS-TABLES,ERROR-FOR-DIVISION-BY-ZERO,NO-AUTO-CREATE_USER,NO_AUTO_VALUE_ON_ZERO,NO_ENGINE_SUBSTITUTION,NO_ZERO_DATE,NO_ZERO_IN_DATE,ONLY_FULL_GROUP_BY
sysdate-is-now                 = 1
innodb                         = FORCE
innodb-strict-mode             = 1

# DATA STORAGE #
datadir                        = /var/lib/mysql

# BINARY LOGGING #
log-bin                        = /var/lib/mysql/mysql-bin
expire-logs-days               = 7
sync-binlog                    = 0
binlog_format               = mixed

# CACHES AND LIMITS #
tmp-table-size                 = 32M
max-heap-table-size            = 32M
query-cache-type               = 0
query-cache-size               = 0
max-connections                = 12000
thread-cache-size              = 100
open-files-limit               = 65535
table-definition-cache         = 4096
table-open-cache               = 1000

# INNODB #
innodb-flush-method            = O_DIRECT
innodb-log-files-in-group      = 2
innodb-log-file-size           = 1G
innodb-file-per-table          = 1
#innodb-buffer-pool-size        = 24G
innodb_additional_mem_pool_size = 16M
innodb_flush_log_at_trx_commit = 0
innodb_max_dirty_pages_pct = 90
innodb_log_buffer_size = 16M

# LOGGING #
log-error                      = /var/lib/mysql/mysql-error.log
log-queries-not-using-indexes  = 0
slow-query-log                 = 1
slow-query-log-file            = /var/lib/mysql/mysql-slow.log
long_query_time                = 1

back-log = 256
wait-timeout = 7200
sort-buffer-size = 1M
join-buffer-size = 2M

relay-log                     = mysql-relay-bin
log-slave-updates             = 1
# read-only                     = 1
#slave-skip-errors             = all

# TMPDIR
#tmpdir = /data/mysql/tmp

# SECURITY
local-infile = 0

